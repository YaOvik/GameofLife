<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="488.2">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="30" Margin="80,160,0,0" VerticalAlignment="Top" Width="320">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnNewGame"  Content="New Game"                  HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30"/>
            <Button x:Name="btnLoadGame" Content="Load Game" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30"/>
            <Button x:Name="btnExitApp"  Content="Exit"      Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30"/>
        </Grid>

    </Grid>
</Window>

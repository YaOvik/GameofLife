<Window x:Class="GOL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GOL"
        mc:Ignorable="d"
        Title="MainWindow" Height="151.3" Width="328.2">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="30" Margin="31,42,0,0" VerticalAlignment="Top" Width="260">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="86*"/>
                <ColumnDefinition Width="89*"/>
                <ColumnDefinition Width="85*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnNewGame"  Content="New Game"                      HorizontalAlignment="Left"    VerticalAlignment="Top" Width="86" Height="29" Click="btnNewGame_Click"/>
            <Button x:Name="btnLoadGame" Content="Load Game" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="86,0,0,0"   VerticalAlignment="Top" Width="89" Height="29"/>
            <Button x:Name="btnExitGame" Content="Exit Game" Grid.Column="1"     HorizontalAlignment="Left" Margin="88.6,0,0,0" VerticalAlignment="Top" Width="85" Grid.ColumnSpan="2" Height="29" Click="btnExitGame_Click"/>
        </Grid>

    </Grid>
</Window>

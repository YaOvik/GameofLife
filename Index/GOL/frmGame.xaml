<Window x:Class="GOL.frmGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GOL"
        mc:Ignorable="d"
        Title="frmGame" Height="300" Width="640">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="58" Margin="80,202,0,0" VerticalAlignment="Top" Width="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="38.4"/>
                <RowDefinition Height="41.6"/>
                <!--<RowDefinition Height="3.5*"/>-->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnNewGen"  Content="New Generation"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="20"/>
            <Button x:Name="btnLoadGen" Content="Load Generation" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="20" Margin="0,20,0,0" Grid.RowSpan="2"/>
            <Button x:Name="btnPlayGen" Content="PLAY"            HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="20"                                    Grid.Column="1"/>
            <Button x:Name="button1"    Content="Button"          HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="20" Margin="0,38,0,0" Grid.RowSpan="2"/>
            <Button x:Name="btnSave"    Content="Save"            HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="20"                                    Grid.Column="2"/>
            <Button x:Name="btnReturn"  Content="Menu"            HorizontalAlignment="Left" VerticalAlignment="Top" Width="100"             Margin="0,20,0,0" Grid.RowSpan="2" Grid.Column="2" Click="btnReturn_Click"/>
        </Grid>
    </Grid>
</Window>
